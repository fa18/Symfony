
{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}


    Accueil - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

    <h2>Liste de toutes les  annonces</h2>

    <ul>
        {{ dump(allAdverts) }}</br>
        {% for advert in allAdverts %}
            <li>
                <a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le {{ advert.date|date('d/m/Y') }}
                {% if advert.nbApplications != 0 %}
                    {{ advert.nbApplications }} candidature{% if advert.nbApplications > 1 %}s{% endif %}
                {% endif %}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}

        <ul class="pagination">

            {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
            {% for p in range(1, 3) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('oc_platform_home', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    </ul>

    <h2>Liste des annonces</h2>


    <ul>
        {{ dump(listAdverts) }}</br>
        {% for advert in listAdverts %}
            <li>
                <a href="{{ path('oc_platform_view', {'id': advert.id}) }}">
                    {{ advert.title }}
                </a>
                par {{ advert.author }},
                le {{ advert.date|date('d/m/Y') }}
                {% if advert.nbApplications != 0 %}
                    {{ advert.nbApplications }} candidature{% if advert.nbApplications > 1 %}s{% endif %}
                {% endif %}
            </li>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}

    </ul>

{% endblock %}


